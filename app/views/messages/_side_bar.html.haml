.side-bar
  .side-bar_user-name
    .top-items
      .top-items_name 
        =  current_user.name
        
      .top-items_icons
        = link_to new_group_path do
          = icon('far', 'edit', class: 'icon-pencil')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon-gear')

  .side-bar_group-list
    - current_user.groups.each do |group|
      .side-bar_group 
        = link_to group_messages_path(group) do
          .side-bar_group-name1
            = group.name
          .side-bar_group-messages
            = group.show_last_message