.chat-main_message-box
  .chat-main_message-info
    .chat-main_message-user
      = message.user.name
    .chat-main_message-day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main_Message-field
    - if message.content.present?
      .chat-main_Message-coment
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?